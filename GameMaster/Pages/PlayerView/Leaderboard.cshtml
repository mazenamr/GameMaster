@page
@model GameMaster.Pages.PlayerView.LeaderboardModel
@{
    ViewData["Title"] = "Leaderboard";
    int counter = 0;
}
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th class="col-auto" scope="col">Rank</th>
            <th class="col-auto" scope="col">Name</th>
            <th class="col-auto" scope="col">Score</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Players is not null)
        {
            @foreach (var player in Model.Players)
            {
                var Person = Model.People.Where(P => P.Id == player.PersonId).FirstOrDefault();
                @if (Person is not null)
                {
                    counter++;
                    <tr>
                        <th scope="row">@counter</th>
                        <td>@Person.FirstName</td>
                        <td>@player.Score</td>
                    </tr>
                }
            }
        }
    </tbody>
</table>